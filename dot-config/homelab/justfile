# List available commands
default:
    @just --list

# Run the stack
up:
    docker-compose up -d
    @echo "ðŸš€ Stack is running!"
    @echo "   - Traefik: http://localhost:8080"
    @echo "   - n8n:     http://n8n.localhost"
    @echo "   - Chat:    http://chat.localhost"
    @echo "   - Search:  http://search.localhost"

# Stop the stack
down:
    docker-compose down

# Stop the stack and remove volumes (Warning: Deletes data)
clean:
    docker-compose down -v
    rm -rf ./certs
